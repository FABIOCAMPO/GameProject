    if direction == "haut":
        coordonnee_destination = creer_case_vide(coordonnee_x(joueur[0]), coordonnee_y(joueur[0] - 32))
        coordonnee_casesuivante = creer_case_vide(coordonnee_x(joueur[0]), coordonnee_y(joueur[0] - 64))

    elif direction == "droite":
        coordonnee_destination = creer_case_vide(coordonnee_x(joueur[0] + 32), coordonnee_y(joueur[0]))
        coordonnee_casesuivante = creer_case_vide(coordonnee_x(joueur[0] + 64), coordonnee_y(joueur[0]))

    elif direction == "gauche":
        coordonnee_destination = creer_case_vide(coordonnee_x(joueur[0] - 32), coordonnee_y(joueur[0]))
        coordonnee_casesuivante = creer_case_vide(coordonnee_x(joueur[0] - 64), coordonnee_y(joueur[0]))

    elif direction == "bas":
        coordonnee_destination = creer_case_vide(coordonnee_x(joueur[0]), coordonnee_y(joueur[0] + 32))
        coordonnee_casesuivante = creer_case_vide(coordonnee_x(joueur[0]), coordonnee_y(joueur[0] + 64))
